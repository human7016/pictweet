<div class="content_post" style="background-image: url(<%= tweeted.image %>);">
  <div class="more">
    <span><%= image_tag 'arrow_top.png' %></span>
    <ul class="more_list">
      <li>
        <%= link_to '詳細', tweet_path(tweeted.id), method: :get %>
      </li>
      <% if user_signed_in? && current_user.id == tweeted.user_id %>
        <li>
          <%= link_to '編集', edit_tweet_path(tweeted.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', "/tweets/#{tweeted.id}", method: :delete %>
        </li>
      <% end %>%
    </ul>
  </div>
  <p><%= tweeted.text %></p>
  <span class="name">
    <a href="/users/<%= tweeted.user.id %>">
      <span>投稿者</span><%= tweeted.user.nickname %>
    </a>
  </span>
</div>